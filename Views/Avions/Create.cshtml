@model GestionReservation.Models.Avion

@{
    ViewData["Title"] = "Créer Avion";
}
<div class="breadcrumbs">
    <div class="page-header d-flex align-items-center" style="background-image: url('~/assets/img/page-header.jpg');">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 text-center">
                    <h2>Bienvenue</h2>
                    <p>Site de réservation de billet d'avion.</p>
                </div>
            </div>
        </div>
    </div>
    <nav>
        <div class="container">
            <ol>
                <li><a href="">Bienvenue Admin</a></li>
                <li><a asp-area="" asp-controller="Vols" asp-action="Index">Configurer Vol</a></li>
                <li><a asp-area="" asp-controller="Avions" asp-action="Index">Configurer Avion</a></li>
                <li><a asp-area="" asp-controller="Administrateur" asp-action="ListeReservation">Voir Liste Réservations</a></li>
                <li><a asp-area="" asp-controller="Administrateur" asp-action="Logout">Log Out</a></li>
            </ol>
        </div>
    </nav>
</div>
<br />
<br />
<br />
<div id="centre">
    <h1>Ajouter Avion</h1>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Modele" class="control-label"></label>
                    <input asp-for="Modele" required  class="form-control" />
                    <span asp-validation-for="Modele" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <label asp-for="NbrSiegeAffaire" class="control-label"></label>
                    <input asp-for="NbrSiegeAffaire" required min="0" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))" class="form-control" />
                    <span asp-validation-for="NbrSiegeAffaire" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <label asp-for="NbrSiegeEconomique" class="control-label"></label>
                    <input asp-for="NbrSiegeEconomique" required min="0" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))" class="form-control" />
                    <span asp-validation-for="NbrSiegeEconomique" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <input type="submit" style="margin-left: 90px;" value="Créer" class="btn btn-primary" />
                </div><br />
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" style="margin-left: 75px;">Voir Liste Avions</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
